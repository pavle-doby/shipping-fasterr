{
  "extends": "../tsconfig.base",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "services/*": ["src/*"],
      "services": ["src"]
    },
    "lib": ["es2022"],
    "target": "es2022",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist"]
}
